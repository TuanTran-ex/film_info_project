<div class="container pt-3">
  <div class="d-flex flex-row justify-content-between">
    <h2 class="mb-3">Quản lý Phim</h2>
    <div>
      <a class="btn btn-primary" href="/admin/films/add"
        ><i class="fas fa-plus"></i> Thêm phim</a
      >
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Danh sách Phim</h3>

          <div class="card-tools">
            <div class="input-group input-group-sm" style="width: 150px">
              <input
                type="text"
                name="table_search"
                class="form-control float-right"
                placeholder="Search"
              />

              <div class="input-group-append">
                <button type="submit" class="btn btn-default">
                  <i class="fas fa-search"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>Tên phim</th>
                <th>Tên tiếng anh</th>
                <th>Thời lượng</th>
                <th>Ngày khởi chiếu</th>
                <th>Quốc gia</th>
                <th>Thể loại</th>
                <th>Loại phim</th>
                <th>Trạng thái</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% for (item of films) { %>
              <tr>
                <td><%=item.name%></td>
                <td><%=item.englishName%></td>
                <td><%=item.time %></td>
                <td><%=item.premierDate%></td>
                <td><%=item.countryName %></td>
                <td>
                  <% for( let i = 0; i < item.genreName.length; i++ ) { %>
                  <span><%=item.genreName[i] %><br /></span>
                  <% } %>
                </td>
                <td><%=item.categoryName %></td>
                <td><%=item.isProcessing ? 'Đang xử lý': 'Đã xử lý' %></td>
                <td>
                  <a class="btn btn-info mr-2" href="#">Chi tiết</a
                  ><a class="btn btn-success mr-2" href="#">Sửa</a
                  ><button
                    class="btn btn-danger"
                    name="delBtn"
                    value="<%=item.id%>"
                  >
                    Xóa
                  </button>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
          <ul class="pagination m-0 float-right">
            <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
          </ul>
        </div>
      </div>
      <!-- /.card -->
    </div>
  </div>
</div>

<script>
  $(function () {
    $('[name=delBtn]').click(function (e) {
      const id = $(this).val();
      e.preventDefault();
      $.ajax({
        url: `/admin/films/${id}`,
        type: 'delete',
      }).done(function () {
        window.location.reload();
      });
    });
  });
</script>
